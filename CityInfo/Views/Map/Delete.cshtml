@model CityObjectModel

<h2>Delete City Object</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>City Object</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Latitude
        </dt>
        <dd class="col-sm-10">
            @Model.Latitude
        </dd>
        <dt class="col-sm-2">
            Longitude
        </dt>
        <dd class="col-sm-10">
            @Model.Longitude
        </dd>
        <dt class="col-sm-2">
            ObjectType
        </dt>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

